<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Databasekopple.NewRun"
             Title="NiRun">
    <StackLayout>
        <Label Text="Date" />
        <DatePicker Date="{Binding Date}" />

        <Label Text="Start Time" />
        <TimePicker Time="{Binding StartTime}" />

        <Label Text="Distance (km)" />
        <Entry Keyboard="Numeric" Text="{Binding Distance}" />

        <Label Text="Duration (hh:mm:ss)" />
        <TimePicker Time="{Binding Duration}" />

        <Label Text="Speed (km/h)" />
        <Entry Keyboard="Numeric" Text="{Binding Speed}" />

        <Label Text="Calories" />
        <Entry Keyboard="Numeric" Text="{Binding Calories}" />
        
        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
        <Button Text="Save" Command="{Binding CreateRunSession}" />
    </StackLayout>
</ContentPage>